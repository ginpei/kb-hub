rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /groups/{id} {
      function getUsers(rsc) {
        return rsc.data.userIds;
      }

      function isMember(auth, array) {
        return auth.uid in array;
      }

      allow read, write: if isMember(request.auth, getUsers(resource));
    }
    match /groups/{gid}/users/{id} {
      allow read, write: if request.auth.uid != null;
    }
    match /groups/{gid}/knowledges/{id} {
      allow read, write: if request.auth.uid != null;
    }
    match /users/{id} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid == id;
    }
  }
}
