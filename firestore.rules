rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /groups/{id} {
      function isParticipant(userId) {
        return exists(
          /databases/$(database)/documents/groups/$(id)/users/$(userId)
        )
      }

      function isManager(userId) {
        let user = get(
          /databases/$(database)/documents/groups/$(id)/users/$(userId)
        );
        return user.data.groupManager;
      }

      allow read: if isParticipant(request.auth.uid);
      allow write: if isManager(request.auth.uid);

      match /users/{userId} {
        allow read, write: if isManager(request.auth.uid);
      }
    }
    match /groupUsers/{id} {
      allow read, write: if request.auth.uid != null;
    }
    match /groups/{gid}/knowledges/{id} {
      allow read, write: if request.auth.uid != null;
    }
    match /users/{id} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid == id;
    }
  }
}
